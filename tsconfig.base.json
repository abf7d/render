{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@labshare/menu-components": ["libs/menu-components/src/index.ts"],
      "@labshare/views": ["libs/views/src/index.ts"],
      "@render/state": ["libs/state/src/index.ts"],
      "@render/viv-viewer": ["libs/viv-viewer/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
